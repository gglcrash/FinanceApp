<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.netcracker.financeapp.dao.IncomeMapper">
   
    <resultMap id="incomeMap" type="Income">
  <id property="idIncome" column="id_income" javaType="int" jdbcType="INTEGER"/>
  <result property="value"  column="value" javaType="int" jdbcType="INTEGER"/>
  <result property="description"  column="description" javaType="String" jdbcType="VARCHAR"/>
  <result property="date"  column="date" javaType="Date" jdbcType="TIMESTAMP"/>
  <result property="type"  column="id_type" javaType="int" jdbcType="INTEGER"/>
   </resultMap>

    
    <select id="getMaxIncome" resultType="Income">
        select * from income where value = (select max(value) from income)
    </select>
    
    <select id="getAllIncomes" parameterType="java.util.Date" resultMap="incomeMap">
        select * from income where date > #{startDate}::date and date < #{endDate}::date
    </select>
</mapper>
