<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd"
       default-autowire="byName">
 
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close">
        <property name="driverClassName" value="${webapp.db.driver}" />
        <property name="url" value="${webapp.db.url}" />
        <property name="username" value="${webapp.db.user}" />
        <property name="password" value="${webapp.db.password}" />
    </bean>
 
    <bean id="sessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="configLocation" value="classpath:mybatis-config.xml"/>
    </bean>
    
    <bean id="incomeMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.netcracker.financeapp.dao.IncomeMapper" />
        <property name="sqlSessionFactory" ref="sessionFactory" />
    </bean>
    
    <bean id="incomeService" class="com.netcracker.financeapp.service.IncomeService">
        <property name="incomeMapper" ref="incomeMapper"/> 
    </bean>
    
    
    <bean id="spendingsMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.netcracker.financeapp.dao.SpendingsMapper" />
        <property name="sqlSessionFactory" ref="sessionFactory" />
    </bean>
    
    <bean id="spendingsService" class="com.netcracker.financeapp.service.SpendingsService">
        <property name="spendingsMapper" ref="spendingsMapper"/> 
    </bean>
    
    
    
    <bean id="incomeTypeMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.netcracker.financeapp.dao.IncomeTypeMapper" />
        <property name="sqlSessionFactory" ref="sessionFactory" />
    </bean>
    
    <bean id="incomeTypeService" class="com.netcracker.financeapp.service.IncomeTypeService">
        <property name="typeMapper" ref="incomeTypeMapper"/> 
    </bean>
    
    
    <bean id="spendingsTypeMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
        <property name="mapperInterface" value="com.netcracker.financeapp.dao.SpendingsTypeMapper" />
        <property name="sqlSessionFactory" ref="sessionFactory" />
    </bean>
    
    <bean id="spendingsTypeService" class="com.netcracker.financeapp.service.SpendingsTypeService">
        <property name="typeMapper" ref="spendingsTypeMapper"/> 
    </bean>
</beans>